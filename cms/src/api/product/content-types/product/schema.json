{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "SKU": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "regionalAvailability": {
      "type": "component",
      "component": "regional-control.regional-availability",
      "repeatable": true
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "products"
    },
    "sizes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::size.size",
      "inversedBy": "products"
    },
    "styles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::style.style",
      "inversedBy": "products"
    },
    "availability": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::availability.availability",
      "inversedBy": "products"
    },
    "colors": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::color.color"
    },
    "details": {
      "type": "richtext"
    },
    "specifications": {
      "type": "richtext"
    }
  }
}
